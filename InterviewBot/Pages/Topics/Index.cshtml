@page
@model InterviewBot.Pages.Topics.IndexModel
@{
    ViewData["Title"] = "Topics";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Topics</h2>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> New Topic
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var topic in Model.Topics)
                        {
                            <tr>
                                <td>@topic.Title</td>
                                <td>
                                    <a asp-page="Edit" asp-route-id="@topic.Id" class="btn btn-sm btn-outline-primary me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@topic.Id" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>