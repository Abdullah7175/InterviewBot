@page
@model InterviewBot.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

<style>
    body, html {
        height: 100%;
        background: #f8f9fa;
    }

    .login-wrapper {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-card {
        max-width: 500px;
        width: 100%;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        background: #fff;
    }

    .login-logo {
        max-height: 120px;
        margin-bottom: 1rem;
    }
</style>

<div class="login-wrapper">
    <div class="login-card">
        <div class="text-center mb-4">
            <img src="~/images/logo.png" alt="AI Interview App Logo" class="login-logo" />

            <h3 class="fw-bold text-primary">Interview Bot</h3>
        </div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-page="/Account/Register" class="btn btn-outline-secondary">Sign Up</a>
                <button type="button" class="btn btn-light" onclick="location.href='@Url.Page("", "Guest")'">Continue as Guest</button>
            </div>
        </form>
    </div>
</div>

